<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="沉浸式效果"
            app:titleTextColor="@android:color/white"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:orientation="vertical">

                <zhaoqy.com.study.custom.VerticalCard
                    android:id="@+id/immersion_item0"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_item_height"
                    app:vc_title="结合侧边栏使用"/>

                <zhaoqy.com.study.custom.VerticalCard
                    android:id="@+id/immersion_item1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_item_height"
                    app:vc_title="结合CoordinatorLayout使用"/>

                <zhaoqy.com.study.custom.VerticalCard
                    android:id="@+id/immersion_item_actionbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_item_height"
                    app:vc_title="结合ActionBar使用"/>

                <zhaoqy.com.study.custom.VerticalCard
                    android:id="@+id/immersion_item_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_item_height"
                    app:vc_title="结合Dialog使用"/>

                <zhaoqy.com.study.custom.VerticalCard
                    android:id="@+id/immersion_item_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_item_height"
                    app:vc_title="结合Fragment使用"/>

                <zhaoqy.com.study.custom.VerticalCard
                    android:id="@+id/immersion_item2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_item_height"
                    app:vc_title="全屏图片"/>

                <zhaoqy.com.study.custom.VerticalCard
                    android:id="@+id/immersion_item3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_item_height"
                    app:vc_title="标题栏背景色渐变"/>

                <zhaoqy.com.study.custom.VerticalCard
                    android:id="@+id/immersion_item4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_item_height"
                    app:vc_title="图片状态栏"/>

                <zhaoqy.com.study.custom.VerticalCard
                    android:id="@+id/immersion_item5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_item_height"
                    app:vc_title="彩色状态栏"/>



                <zhaoqy.com.study.custom.VerticalCard
                    android:id="@+id/immersion_itema"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_item_height"
                    app:vc_title="隐藏状态栏"/>

                <zhaoqy.com.study.custom.VerticalCard
                    android:id="@+id/immersion_itemb"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_item_height"
                    app:vc_title="隐藏导航栏"/>

                <zhaoqy.com.study.custom.VerticalCard
                    android:id="@+id/immersion_itemc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_item_height"
                    app:vc_title="隐藏全部"/>

                <zhaoqy.com.study.custom.VerticalCard
                    android:id="@+id/immersion_itemd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_item_height"
                    app:vc_title="恢复显示"/>

                <zhaoqy.com.study.custom.VerticalCard
                    android:id="@+id/immersion_iteme"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_item_height"
                    app:vc_title="全屏显示切换"/>

                <zhaoqy.com.study.custom.VerticalCard
                    android:id="@+id/immersion_itemf"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_item_height"
                    app:vc_title="状态栏字体颜色为深色"/>

                <zhaoqy.com.study.custom.VerticalCard
                    android:id="@+id/immersion_itemg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_item_height"
                    app:vc_title="状态栏字体颜色为亮色(默认为亮色)"/>

                <zhaoqy.com.study.custom.VerticalCard
                    android:id="@+id/immersion_itemi"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_item_height"
                    app:vc_title="解决白色状态栏问题"/>

                <zhaoqy.com.study.custom.VerticalCard
                    android:id="@+id/immersion_itemj"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_item_height"
                    app:vc_title="解决顶部与状态栏重叠问题"/>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <include layout="@layout/immersion_drawer_left"/>
</android.support.v4.widget.DrawerLayout>